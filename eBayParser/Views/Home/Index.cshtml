@model List<eBayParser.Classes.EBayItem>
@{
    ViewBag.Title = "Home Page";
}
<br /> <br /> <br />


<div class="container">

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <form action="/Home/index" method="post">
                <div class="form-group">
                    <input type="text" name="url" placeholder="Enter link" />
                    <input type="submit" value="submit" />
                </div>
            </form>
        </div>
        <br /> <br />
    </div>


    @if (Model == null || Model.Count == 0)
    {
        <p>No records</p>
    }

    @if (Model != null && Model.Count>0)
    {
        <div class="row">
            <div class="col-lg-12">
                <table class="table-striped">
                    <tr>
                        <th>Title</th>
                        <th>Link</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.title</td>
                            <td>@item.link</td>
                            <td>@item.price</td>
                            <td>@item.quantity</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }
</div>